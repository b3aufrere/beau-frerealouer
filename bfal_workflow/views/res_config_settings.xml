<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_invoie_inhert" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']" position="inside">
                    <h2>Tip Configuration</h2>
                    <div class="row o_settings_container">
                        <div class="col-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="tip_product_id" />
                                <field name="tip_product_id" />
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>