<odoo>
    
    <record id="sh_create_expense_project_task_button" model="ir.ui.view">
        <field name="name">create.expense.project.task</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Create Expense" type="object" name="create_expense"></button>
            </xpath>
            <xpath expr="//sheet/div[@name='button_box']" position="inside">                                  
                <button type="object" name="action_task_expense" class="oe_stat_button" icon="fa-pencil-square-o">
                    <field name="sh_expense_count" widget="statinfo" string="Expenses" />
                </button>            
            </xpath>
        </field>
    </record>

</odoo>
